// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tool {
  id          String   @id @default(cuid())
  name        String
  description String
  url         String
  logoUrl     String?
  category    String
  tags        String?  // Comma-separated tags
  traffic     String?  // "low", "medium", "high", "unknown"
  revenue     String?  // "free", "freemium", "paid", "enterprise"
  rating      Float?
  estimatedVisits Int?  // Estimated monthly web visits
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([traffic])
  @@index([revenue])
}

